  <body>
    {% block top %}{% endblock %}

    {# 公共头部 #}
    {% block header %}
      {% include "./header.njk" %}
    {% endblock %}

    {# 面包屑 #}
    {% block breadcrumb %}
      {% include "./breadcrumb.njk" %}
    {% endblock %}

    {# 主内容区 #}
    {% block main %}{% endblock %}

    {# 公共尾部 #}
    {% block footer %}
      {% include "./footer.njk" %}
    {% endblock %}

    <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
    <script>    
      $(function () {
        $(".search-form").submit(function (e) { 
          var $input = $(this).find("input[name='keyword']");
          var keyword = $.trim($input.val());
          console.log("keyword", keyword)
          if (keyword === "") {
            e.preventDefault();
          } else {
            $input.val(keyword)
          }
        });
      });
    </script>

    {# 加载脚本 #}
    {% block scripts %}{% endblock %}
  </body>
</html>